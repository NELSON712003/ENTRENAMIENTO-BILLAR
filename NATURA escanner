    <script>
        // ==========================================
        // CONFIGURACI√ìN - REEMPLAZA CON TU URL
        // ==========================================
        let WEB_APP_URL = localStorage.getItem('webAppUrl') || '';
        
        // Variables globales
        let html5QrCode;
        let ultimoCodigo = '';
        let ultimoEnvio = 0;
        const DELAY_ENTRE_ESCANEOS = 3000; // 3 segundos entre escaneos del mismo c√≥digo
        
        // Inicializar fecha/hora autom√°tica
        function actualizarFechaHora() {
            const ahora = new Date();
            const formato = ahora.toLocaleString('es-ES', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            });
            document.getElementById('manualFecha').value = formato;
            return formato;
        }
        
        // Actualizar cada segundo
        setInterval(actualizarFechaHora, 1000);
        actualizarFechaHora();


        // Guardar configuraci√≥n
        function guardarConfig() {
            const url = document.getElementById('webAppUrl').value.trim();
            if (!url || !url.includes('script.google.com')) {
                alert('Por favor ingresa una URL v√°lida de Google Apps Script');
                return;
            }
            WEB_APP_URL = url;
            localStorage.setItem('webAppUrl', url);
            document.getElementById('configSection').classList.add('hidden');
            document.getElementById('autoIndicator').classList.remove('hidden');
            iniciarEscanner();
        }


        // Verificar si ya hay configuraci√≥n guardada
        if (WEB_APP_URL && WEB_APP_URL.includes('script.google.com')) {
            document.getElementById('webAppUrl').value = WEB_APP_URL;
            document.getElementById('configSection').classList.add('hidden');
            document.getElementById('autoIndicator').classList.remove('hidden');
            iniciarEscanner();
        }


        // ==========================================
        // FUNCI√ìN DE ENV√çO A GOOGLE SHEETS
        // ==========================================
        async function enviarAGoogleSheets(fechaHora, codigoBarra, esAutomatico = true) {
            if (!WEB_APP_URL || WEB_APP_URL.includes('TU_ID_AQUI')) {
                mostrarEstado('‚ùå Error: Configura la URL del Web App primero', 'error');
                return false;
            }


            try {
                const datos = {
                    fechaHora: fechaHora,
                    codigoBarra: codigoBarra,
                    tipo: esAutomatico ? 'AUTOMATICO' : 'MANUAL'
                };


                // Usar JSONP para evitar problemas de CORS
                const response = await fetch(WEB_APP_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(datos)
                });


                // Como no-cors no devuelve respuesta legible, asumimos √©xito
                // En la pr√°ctica, el script de Google se ejecutar√°
                
                agregarAlHistorial(fechaHora, codigoBarra, true, esAutomatico);
                
                if (esAutomatico) {
                    mostrarUltimoEscaneo(fechaHora, codigoBarra, '‚úÖ Enviado autom√°ticamente');
                    mostrarEstado('‚úÖ C√≥digo enviado: ' + codigoBarra, 'success');
                }
                
                return true;


            } catch (error) {
                console.error('Error:', error);
                agregarAlHistorial(fechaHora, codigoBarra, false, esAutomatico);
                
                if (esAutomatico) {
                    mostrarEstado('‚ùå Error al enviar: ' + error.message, 'error');
                }
                
                return false;
            }
        }


        // ==========================================
        // ESCANER DE C√ìDIGOS DE BARRAS
        // ==========================================
        function iniciarEscanner() {
            const config = { 
                fps: 10, 
                qrbox: { width: 250, height: 250 },
                aspectRatio: 1.0
            };


            html5QrCode = new Html5Qrcode("reader");


            html5QrCode.start(
                { facingMode: "environment" },
                config,
                onScanSuccess,
                onScanFailure
            ).catch(err => {
                console.error("Error al iniciar c√°mara:", err);
                mostrarEstado('‚ùå Error de c√°mara: ' + err, 'error');
            });
        }


        function onScanSuccess(decodedText, decodedResult) {
            const ahora = Date.now();
            
            // Evitar env√≠os duplicados del mismo c√≥digo
            if (decodedText === ultimoCodigo && (ahora - ultimoEnvio) < DELAY_ENTRE_ESCANEOS) {
                return;
            }


            ultimoCodigo = decodedText;
            ultimoEnvio = ahora;


            const fechaHora = actualizarFechaHora();
            
            // Enviar autom√°ticamente sin bot√≥n
            enviarAGoogleSheets(fechaHora, decodedText, true);
            
            // Sonido de confirmaci√≥n (opcional)
            playBeep();
        }


        function onScanFailure(error) {
            // No mostrar errores de escaneo constantes (es normal cuando no hay c√≥digo)
            // console.warn(`C√≥digo escaneo error: ${error}`);
        }


        // ==========================================
        // ENTRADA MANUAL
        // ==========================================
        function enviarManual() {
            const codigo = document.getElementById('manualCodigo').value.trim();
            
            if (!codigo) {
                alert('Por favor ingresa el c√≥digo de barras');
                return;
            }


            const fechaHora = document.getElementById('manualFecha').value;
            const btn = document.getElementById('btnManual');
            
            btn.disabled = true;
            btn.innerHTML = '<span>‚è≥</span> Enviando...';
            
            enviarAGoogleSheets(fechaHora, codigo, false).then(exito => {
                btn.disabled = false;
                btn.innerHTML = '<span>üì§</span> Enviar a Google Sheets';
                
                if (exito) {
                    document.getElementById('manualCodigo').value = '';
                    document.getElementById('manualCodigo').focus();
                    alert('‚úÖ Enviado correctamente a Google Sheets');
                } else {
                    alert('‚ùå Error al enviar. Verifica la conexi√≥n.');
                }
            });
        }


        // Permitir enviar con Enter en el campo de c√≥digo
        document.getElementById('manualCodigo').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                enviarManual();
            }
        });


        // ==========================================
        // UI Y UTILIDADES
        // ==========================================
        function mostrarEstado(mensaje, tipo) {
            const status = document.getElementById('status');
            status.textContent = mensaje;
            status.className = 'status ' + tipo;
            
            if (tipo === 'success') {
                setTimeout(() => {
                    status.className = 'status scanning';
                    status.textContent = 'üì∑ Escaneando... Apunta al c√≥digo de barras';
                }, 3000);
            }
        }


        function mostrarUltimoEscaneo(fecha, codigo, estado) {
            document.getElementById('lastScan').classList.remove('hidden');
            document.getElementById('lastFecha').textContent = fecha;
            document.getElementById('lastCodigo').textContent = codigo;
            document.getElementById('lastEstado').textContent = estado;
        }


        function agregarAlHistorial(fecha, codigo, exito, esAuto) {
            const historyList = document.getElementById('historyList');
            const item = document.createElement('div');
            item.className = 'history-item ' + (exito ? 'success' : '');
            
            const hora = fecha.split(',')[1] || fecha;
            const tipo = esAuto ? 'ü§ñ' : '‚úèÔ∏è';
            
            item.innerHTML = `
                <div>
                    <strong>${tipo} ${codigo}</strong>
                    <div style="font-size: 0.75rem; color: #666;">${hora}</div>
                </div>
                <span style="color: ${exito ? '#4caf50' : '#f44336'}; font-size: 1.2rem;">
                    ${exito ? '‚úì' : '‚úó'}
                </span>
            `;
            
            historyList.insertBefore(item, historyList.firstChild);
            
            // Mantener solo los √∫ltimos 10
            while (historyList.children.length > 10) {
                historyList.removeChild(historyList.lastChild);
            }
        }


        function playBeep() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 800;
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.1);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.1);
            } catch (e) {
                // Silenciar errores de audio
            }
        }


        // Pausar escaneo cuando la pesta√±a no est√° visible
        document.addEventListener('visibilitychange', () => {
            if (html5QrCode) {
                if (document.hidden) {
                    html5QrCode.pause();
                } else {
                    html5QrCode.resume();
                }
            }
        });
    </script>
</body>
